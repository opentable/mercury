{
  "name": "mercury-bot",
  "version": "1.2.0",
  "description": "Mercury is a bot for managing in-code static translations",
  "main": "src/app.js",
  "scripts": {
    "format": "prettier-eslint \"**/*.js\" --print-width 300 --write",
    "mocha": "mocha test/unit --timeout 10000",
    "precommit": "lint-staged",
    "test": "npm run format && eslint ./ && npm run mocha"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "npm run format",
        "eslint ./",
        "git add"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opentable/mercury.git"
  },
  "keywords": [
    "translation",
    "mercury",
    "bot"
  ],
  "author": "Federico Maffei <federico.maffei@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/opentable/mercury/issues"
  },
  "homepage": "https://github.com/opentable/mercury#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.13.1",
    "husky": "^0.14.3",
    "injectr": "^0.5.1",
    "lint-staged": "^4.3.0",
    "mocha": "^3.2.0",
    "prettier-eslint-cli": "^4.4.0",
    "sinon": "^1.17.7"
  },
  "dependencies": {
    "async": "^2.1.4",
    "base-64": "^0.1.0",
    "config": "^1.24.0",
    "deep-diff": "^0.3.4",
    "github": "^8.2.1",
    "joi": "^10.2.0",
    "js-yaml": "^3.7.0",
    "lodash": "^4.17.4",
    "micromatch": "^2.3.11",
    "needle": "^1.6.0",
    "parse-glob": "^3.0.4",
    "string-to-template": "^1.0.0",
    "utf8": "^2.1.2",
    "xml-js": "^1.5.1"
  }
}
